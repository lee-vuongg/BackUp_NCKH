@model TCN_NCKH.Models.DBModel.LichthiSinhvien
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Chi tiết Phân công Lịch thi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; // Đảm bảo sử dụng layout admin
}

<h1 class="mb-4">Chi tiết Phân công Lịch thi</h1>

@* Hiển thị thông báo từ TempData *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Phân công Lịch thi: @Model.Lichthi.Dethi.Tendethi cho @Model.Sinhvien.SinhvienNavigation.Hoten</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                Lịch thi
            </dt>
            <dd class="col-sm-9">
                <strong>Đề thi:</strong> @Html.DisplayFor(model => model.Lichthi.Dethi.Tendethi)<br />
                <strong>Lớp:</strong> @Html.DisplayFor(model => model.Lichthi.Lophoc.Tenlop)<br />
                <strong>Ngày thi:</strong> @Html.DisplayFor(model => model.Lichthi.Ngaythi)
            </dd>

            <dt class="col-sm-3">
                Sinh viên
            </dt>
            <dd class="col-sm-9">
                <strong>MSV:</strong> @Html.DisplayFor(model => model.Sinhvien.Msv)<br />
                <strong>Họ tên:</strong> @Html.DisplayFor(model => model.Sinhvien.SinhvienNavigation.Hoten)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Duocphepthi)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Duocphepthi)
            </dd>
        </dl>
    </div>
    <div class="card-footer d-flex justify-content-end gap-2">
        @* Dùng gap-2 để tạo khoảng cách giữa các nút *@
        <a asp-action="Edit" asp-route-lichthiId="@Model.Lichthiid" asp-route-sinhvienId="@Model.Sinhvienid" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Chỉnh sửa
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>