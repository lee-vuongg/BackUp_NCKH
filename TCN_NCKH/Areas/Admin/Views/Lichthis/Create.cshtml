@model TCN_NCKH.Models.DBModel.Lichthi
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Tạo Lịch thi mới";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; // Hoặc layout của mi
}

<h1>Tạo Lịch thi mới</h1>

<h4>Lịch thi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Dethiid" class="control-label"></label>
                <select asp-for="Dethiid" class="form-control" asp-items="ViewBag.Dethiid"></select>
                <span asp-validation-for="Dethiid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lophocid" class="control-label"></label>
                <select asp-for="Lophocid" class="form-control" asp-items="ViewBag.Lophocid"></select>
                <span asp-validation-for="Lophocid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phongthi" class="control-label"></label>
                <input asp-for="Phongthi" class="form-control" />
                <span asp-validation-for="Phongthi" class="text-danger"></span>
            </div>

            @* CẬP NHẬT Ở ĐÂY: Dùng input type="date" và type="time" *@
            <div class="form-group">
                <label for="ngayThiPicker" class="control-label">Ngày thi</label>
                <input type="date" id="ngayThiPicker" name="ngayThiPicker" class="form-control"
                       value="@(ViewBag.NgayThiPicker != null ? ViewBag.NgayThiPicker : DateTime.Today.ToString("yyyy-MM-dd"))" />
                <span class="text-danger"></span> @* Không có asp-validation-for cho ngayThiPicker vì nó không phải là thuộc tính của Model Lichthi *@
            </div>
            <div class="form-group">
                <label for="gioThiPicker" class="control-label">Giờ thi</label>
                <input type="time" id="gioThiPicker" name="gioThiPicker" class="form-control"
                       value="@(ViewBag.GioThiPicker != null ? ViewBag.GioThiPicker : DateTime.Now.ToString("HH:mm"))" />
                <span class="text-danger"></span> @* Không có asp-validation-for cho gioThiPicker vì nó không phải là thuộc tính của Model Lichthi *@
            </div>
            @* Kết thúc phần cập nhật *@

            @* ĐÃ SỬA: Loại bỏ thuộc tính 'value' thủ công và thêm 'readonly' *@
            <div class="form-group">
                <label asp-for="ThoigianBatdau" class="control-label"></label>
                <input asp-for="ThoigianBatdau" class="form-control" type="datetime-local" readonly />
                <span asp-validation-for="ThoigianBatdau" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ThoigianKetthuc" class="control-label"></label>
                <input asp-for="ThoigianKetthuc" class="form-control" type="datetime-local" readonly />
                <span asp-validation-for="ThoigianKetthuc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Thoigian" class="control-label"></label>
                <input asp-for="Thoigian" class="form-control" />
                <span asp-validation-for="Thoigian" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
